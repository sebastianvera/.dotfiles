[user]
  name = Sebastian Vera
  email = u.verainf@gmail.com
[apply]
  # Detect whitespace errors when applying a patch
  whitespace = fix
[core]
  # Use custom `.gitignore`
	excludesfile = /Users/sebastianvera/.gitignore
  editor = nvim
  pager = delta
  # editor = code --wait
  autocrlf = input
[interactive]
  diffFilter = delta --color-only
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  commit = green bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = green
  changed = red
  untracked = yellow
[fetch]
  prune = true
[push]
  default = current
# [init]
#   templatedir = ~/.git_template
[alias]
  # ctags = !.git/hooks/ctags
  lg = log --color --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; nvim `f`"
  add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
  standup = shortlog --since=yesterday
  today = shortlog --since=midnight
  pr = pull-request
  co = checkout
  prune-branches = "!f() { git branch --merged | grep -v master | grep -v development | grep -v '*' | xargs git branch -d ; }; f"
[rebase]
  autosquash = true
[github]
  user = sebastianvera
; [pager]
;   diff = diff-so-fancy | less --tabs=4 -RX
;   show = diff-so-fancy | less --tabs=4 -RX
[commit]
  verbose = true
[pull]
	ff = only
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[init]
	defaultBranch = main
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
 [include]
  path = ~/.themes.gitconfig
[delta]
  features = mantis-shrimp-lite
